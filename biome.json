{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100,
		"indentStyle": "tab",
		"formatWithErrors": false
	}
}
